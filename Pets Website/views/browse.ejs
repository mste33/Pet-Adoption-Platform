<%- include('partials/header') %>

<div class="container mt-5">
    <h1>Browse Available Pets</h1>
    
    <div class="row mt-4">
        <% if (pets && pets.length > 0) { %>
            <% pets.forEach(function(pet) { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= pet.type %> - <%= pet.breed %></h5>
                            <p class="card-text">
                                <strong>Age:</strong> <%= pet.age %><br>
                                <strong>Gender:</strong> <%= pet.gender %><br>
                                <strong>Good with:</strong> <%= pet.goodWith %><br>
                                <strong>Friendly:</strong> <%= pet.friendly %><br>
                                <strong>Health:</strong> <%= pet.health %><br>
                                <strong>Gets along with:</strong> <%= pet.getAlongWith.join(', ') %>
                            </p>
                            <p class="card-text"><small class="text-muted">Posted by: <%= pet.username %></small></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <p>No pets available at the moment.</p>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %> 